<div class="col-md-12 order-md-1">
    <h4 class="mb-3">List Users</h4>
        {{!-- <hr class="mb-4"> --}}
        
       <div class="container bootstrap snippets bootdey">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-box no-header clearfix">
                        <div class="main-box-body clearfix">

                            {{#if data}}

                            <div class="table-responsive">
                                <table class="table ">
                                    <thead>
                                        <tr>
                                            <th><span>Name</span></th>
                                            <th><span>Email</span></th>
                                            <th class="text-center"><span>Status</span></th>
                                            <th><span>Site Status</span></th>
                                            {{!-- <th>Action</th> --}}
                                        </tr>
                                    </thead>

                                    {{#each data}}
                                    <tbody>
                                        <tr>
                                            <td>
                                                <img src="https://bootdey.com/img/Content/avatar/avatar5.png" alt="" width="30">
                                               &ensp; <a href="#" class="user-link"> {{ this.name }}</a>
                                            </td>
                                            <td>{{ this.email }}</td>
                                            <td class="text-center">

                                               <span class="stat">
                                                   <input
                                                    type="checkbox"
                                                    name="status_btn"
                                                    class="toggle-event"
                                                    {{#ifCond this.status 0}}
                                                        checked=true
                                                        data-on="Active" 
                                                        value="active"
                                                    {{else}}
                                                        checked=false
                                                        data-off="Not Active"
                                                        value="inactive"
                                                    {{/ifCond}}
                                                    data-toggle="toggle" 
                                                    data-size="small"                                         
                                                    title="Click to toggle me"

                                                    />
                                               </span>

                                            </td>
                                            <td>
                                                <span class="statt">
                                                   <input
                                                    type="checkbox"
                                                    name="site_status_btn"
                                                    class="toggle-event"
                                                    {{#ifCond this.site_1 0}}
                                                        checked=true
                                                        data-on="Active" 
                                                        value="active"
                                                    {{else}}
                                                        checked=false
                                                        data-off="Not Active"
                                                        value="inactive"
                                                    {{/ifCond}}
                                                    data-toggle="toggle" 
                                                    data-size="small"                                         
                                                    title="Click to toggle me"

                                                    />
                                               </span>
                                            </td>
                                            {{!-- <td style="width: 20%;">
                                                {{!-- <a href="#" class="table-link danger">
                                                    <i class="fa fa-trash"></i>
                                                </a> --}}
                                            </td> --}}
                                        </tr>
                                    </tbody>

                                     {{/each}}
                                </table>
                            </div>

                            {{else}}
                                <p>No users at the moment.</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

</div>

